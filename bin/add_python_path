# Add Aerospike python directory to python system path.
# This script must be run as root or sudo.

import sys
import fnmatch

list = []
list.extend(fnmatch.filter(sys.path, '*dist-packages'))
list.extend(fnmatch.filter(sys.path, '*site-packages'))

if (len(list) > 0):
	filepath = list[0] + '/aerospike.pth'

	if (sys.platform == 'darwin'):
		stringpath = '/usr/local/aerospike/lib/python'
	else:
		stringpath = '/opt/aerospike/lib/python'

	print('Writing ' + filepath) 
	print('Adding python path ' + stringpath)

	file = open(filepath, 'w')
	file.write(stringpath + '\n')
	file.close()	
else:
	print("Failed to parse python sys.path")
